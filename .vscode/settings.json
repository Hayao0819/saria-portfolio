{
    "editor.defaultFormatter": "denoland.vscode-deno",
    "deno.enable": true,
    "deno.lint": true,
    "json.schemas": [
        {
            "fileMatch": [
                "/deno.json"
            ],
            "url": "https://raw.githubusercontent.com/denoland/deno/v1.41.3/cli/schemas/config-file.v1.json"
        }
    ],

    "[typescript]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "typescript.tsserver.experimental.enableProjectDiagnostics": false
}
